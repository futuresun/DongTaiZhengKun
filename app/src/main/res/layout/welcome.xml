<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragmentId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/selectId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/homeId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableTop="@drawable/main_home"
            android:gravity="center"
            android:text="系统\n配置"
            android:textColor="@drawable/text_color"/>

        <RadioButton
            android:id="@+id/tuanId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableTop="@drawable/main_tuangou"
            android:gravity="center"
            android:text="新建\n订单"
            android:textColor="@drawable/text_color"/>

        <RadioButton
            android:id="@+id/findId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableTop="@drawable/main_search"
            android:gravity="center"
            android:text="今日\n订单"
            android:textColor="@drawable/text_color"/>

        <RadioButton
            android:id="@+id/myId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableTop="@drawable/main_my"
            android:gravity="center"
            android:text="派单\n详情"
            android:textColor="@drawable/text_color"/>
    </RadioGroup>


</LinearLayout>